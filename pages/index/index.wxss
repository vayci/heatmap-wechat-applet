@import "../../app.wxss";

.title {
  font-size: 1.4rem;
  height: 15vh;
  line-height: 15vh;
  width: 100vw;
  text-align: center;
  font-family: "Arial, Helvetica, sans-serif";
}
.popup {
  height: 5vh;
  width: 100vw;
}
.wrap {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 25vh;
}
.col {
    padding: 0px;
}
.item {
    background: #eee;
    height: 14px;
    width: 14px;
    margin: 2px;
    border-radius: 1px;
}
.item:hover {
    border: 1px solid black;
    height: 12px;
    width: 12px;
}
.weekItem {
    height: 14px;
    width: 20px;
    margin: 2px;
    font-size: 8px;
    text-align: center;
    font-family: 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
    color: gray;
}

.map {
  display:flex;
  flex-direction:row;
  overflow-x:scroll;
  overflow-y: hidden;
  width:100%;
  -webkit-overflow-scrolling:touch;
}

.content {
  height: 30vh;
  width: 100vw;
}

.btn_area {
  height: 20vh;
  width: 100vw;
}

.content_item {
  padding: 5vh 0 0 15vw;
}

.btn_area {
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: center;
  width: 100vw;
  text-align: center;
  height: 20vh;
}

.btns {
  text-align: center;
  line-height: 3vh;
  margin: 5vh 5vw 0 5vw;
  padding: 5px;
  width: 10vw;
  height: 3vh;
  border: 1px solid #969696;
}

.btns::after{
  background: #969696;
  color: #fff;
}

.reset {
  text-align: left;
  height: 5vh;
  width: 100vw;
  padding-left: 10vw;
}

.iconfont {
  width: 10vw;
  height: 10vw;
  line-height: 10vw;
  text-align: center;
  justify-content: center;
  font-size:1.5rem;
  border-radius: 50%;
  border: 1px solid #969696;
  color: #969696;
}
