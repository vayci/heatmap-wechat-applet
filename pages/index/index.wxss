@import "../../app.wxss";

.title {
  font-size: 1.4rem;
  height: 20vh;
  line-height: 20vh;
  width: 100vw;
  text-align: center;
  font-family: "Arial, Helvetica, sans-serif";
}
.popup {
  height: 5vh;
  width: 100vw;
}
.wrap {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 25vh;
}
.col {
    padding: 0px;
}
.item {
    background: #eee;
    height: 14px;
    width: 14px;
    margin: 2px;
    border-radius: 1px;
}
.item:hover {
    border: 1px solid black;
    height: 12px;
    width: 12px;
}
.weekItem {
    height: 14px;
    width: 20px;
    margin: 2px;
    font-size: 8px;
    text-align: center;
    font-family: 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
    color: gray;
}

.map {
  display:flex;
  flex-direction:row;
  overflow-x:scroll;
  overflow-y: hidden;
  width:100%;
  -webkit-overflow-scrolling:touch;
}

.content {
  height: 30vh;
  width: 100vw;
}

.btn_area {
  height: 20vh;
  width: 100vw;
}

.content_item {
  padding-top: 1.5rem;
}
